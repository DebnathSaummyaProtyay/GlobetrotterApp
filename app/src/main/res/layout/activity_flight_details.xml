<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C9DB8"
    tools:context=".MainActivity">

    <!-- CardView 1 -->

    <Button
        android:id="@+id/book3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#363434"
        android:backgroundTint="#363434"
        android:text="Confirm -->"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#363434"
        android:backgroundTint="#363434"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="View Flight Details"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:padding="16dp">

            <!-- Airline Logo -->

            <!-- Departure Airport -->

            <!-- Arrival Airport -->
            <TextView
                android:id="@+id/departureAirport1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YQT"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <!-- Plane Icon -->
            <TextView
                android:id="@+id/arrivalAirport1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <!-- Flight Duration -->

            <ImageView
                android:id="@+id/planeIcon1"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_plane"
                app:layout_constraintBottom_toBottomOf="@id/departureAirport1"
                app:layout_constraintEnd_toStartOf="@id/arrivalAirport1"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toEndOf="@id/departureAirport1"
                app:layout_constraintTop_toTopOf="@id/departureAirport1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/flightDuration1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:text="13h 40m"
                app:layout_constraintEnd_toStartOf="@id/arrivalAirport1"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toEndOf="@id/departureAirport1"
                app:layout_constraintTop_toBottomOf="@id/planeIcon1" />

            <!-- Arrival Time -->
            <TextView
                android:id="@+id/departureTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="05:05 AM"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/departureAirport1"
                app:layout_constraintVertical_bias="0.0" />

            <!-- View Detail Link -->

            <TextView
                android:id="@+id/cost1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="CA$ 1983"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrivalAirport1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/arrivalTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="07:05 AM +"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrivalAirport1"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/ai"
                android:layout_width="123dp"
                android:layout_height="31dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/planeIcon1"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ai" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:padding="16dp">


            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="319dp"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/seatimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/seat" />

                <TextView
                    android:id="@+id/textseat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average legroom (31 in)"
                    android:textColor="#656161"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="319dp"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.222">

                <ImageView
                    android:id="@+id/wifiimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/wifi" />

                <TextView
                    android:id="@+id/wifitext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wi-Fi for a fee"
                    android:textColor="#656161"
                    android:textSize="19dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="319dp"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.424">

                <ImageView
                    android:id="@+id/plugimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/plug" />

                <TextView
                    android:id="@+id/plugtext"
                    android:layout_width="281dp"
                    android:layout_height="42dp"
                    android:text="In-seat power and USB outlets"
                    android:textColor="#656161"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="319dp"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.615">

                <ImageView
                    android:id="@+id/videoimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/video" />

                <TextView
                    android:id="@+id/videotext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On-demand video"
                    android:textColor="#656161"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="319dp"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.794">

                <ImageView
                    android:id="@+id/cashimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/cash" />

                <TextView
                    android:id="@+id/cashtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket Changes for a fee"
                    android:textColor="#656161"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="319dp"
                android:layout_height="81dp"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <ImageView
                    android:id="@+id/tickimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/tick" />

                <TextView
                    android:id="@+id/bagtext"
                    android:layout_width="242dp"
                    android:layout_height="50dp"
                    android:text="1 free carry-on and checked bag free"
                    android:textAlignment="inherit"
                    android:textColor="#656161"
                    android:textSize="19dp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView 3 -->

    <!-- CardView 4 -->

</androidx.constraintlayout.widget.ConstraintLayout>

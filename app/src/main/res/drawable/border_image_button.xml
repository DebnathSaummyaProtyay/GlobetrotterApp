<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Highlight color when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pressed_background_color" />
            <stroke
                android:width="2dp"
                android:color="@color/border_color_pressed" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Highlight color when the button is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/focused_background_color" />
            <stroke
                android:width="2dp"
                android:color="@color/border_color_focused" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/default_background_color" />
            <stroke
                android:width="2dp"
                android:color="@color/border_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
